<div class="page-header">
	<h2>
		Report #<%= params[:id] %>
		<span style="font-size: 14px;" class=<%= ('"label label-' + (pass(@report) ? "success" : "danger") + '"').html_safe %>><%= pass(@report) ? "Positive" : "Negative" %> Report</span>
	</h2>

	<ul class="actions">
		<li><%= link_to "Back", reports_path, class: "btn btn-primary" %></li>
		<li><%= link_to "Edit Report", edit_report_path(params[:id]), class: "btn btn-warning" %></li>
		<li><%= link_to "Delete Report", report_path(params[:id]), method: :delete, data: { confirm: "Are you sure you want to delete this report?" }, class: "btn btn-danger" %></li>
	</ul>
</div>

<div class="container">
	<h3>Reported On <%= link_to @establishment["Name"], establishment_path(@report["EID"]) %></h3>
	<div class="well well-lg">
		<h4><%= @report["Comment"] %></h4>
	</div>
	<p>Submitted On <%= @report["Datetime"] %></p>
	<p>Submitted By <%= @report ["VID"] %></p>
</div>